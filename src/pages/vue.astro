---
import ComponentOne from "../components/ComponentOne.vue";
import ComponentTwo from "../components/ComponentTwo.vue";
import Visualizator from "../components/Visualizator.vue";

const title = "Hello World!";
---

<html>
  <head>
    <!-- Astro uses a JSX-like syntax in it's body -->
    <title>{title}</title>
  </head>
  <body>
    <main class=" grid min-h-screen">

        <div class=" grid grid-cols-2 justify-items-center content-center">
          <div class="w-7/12">
            <ComponentOne client:load />
          </div>
          <div class="w-7/12">
            <ComponentTwo client:load />
          </div>
        </div>

        <div class="grid place-content-center w-full">
          <div class="w-full">
            <Visualizator client:load />
          </div>
        </div>
    </main>
  </body>
</html>