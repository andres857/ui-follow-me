                </div>
                <div class=" bg-slate-300">
                </div>
                <div class=" bg-slate-300">
                </div>
                <div class=" bg-slate-300">
                </div>
                <div class=" bg-slate-300">
                </div>
            </div>
            <!-- Progress -->
            
        </div>
        <!-- card -->
    </section>
    <!-- menu section -->

    <!-- Image Section -->
    <section class=" grid grid-rows px-6 py-6">
        <!-- Indication Section -->
        <div class=" flex bg-follow items-center h-[130px] rounded-t-lg">
            <h3 class="text-white text-[35px] font-bold mx-auto">Sigue recto</h3>
        </div>
        <!-- Image -->
        <div class="relative ">

            <div class="absolute top-6 w-full flex justify-between items-center px-16 h-[100px] ">

                <div class="bg-follow flex rounded-full w-[70px] h-[70px] justify-center items-center">
